<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase_order_template_inherit" inherit_id="purchase.report_purchaseorder_document" name="Purchase Order Template Inherit">
        <!-- <xpath expr="//table[@class='table table-sm o_main_table table-borderless mt-4']" position="after"> -->
        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="address">
                <div t-field="o.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name", "phone", "vat"], "no_marker": True, "phone_icons": True}'/>
                <t t-if="o.partner_id.bank_ids">
                    <div class="mt-3">
                        <em>Cuenta Cte: </em><span t-field="o.partner_id.bank_ids[0].acc_number"/> - <span t-field="o.partner_id.bank_ids[0].bank_id"/>
                    </div>
                </t>
            </t>
        </xpath>

        <xpath expr="//div[@class='page']/div[2]" position="replace">
            <div class="mt-4">
                <h2 t-if="o.state in ['draft', 'sent', 'to approve']">Solicitud de presupuesto #<span t-field="o.name"/></h2>
                <h2 t-if="o.state in ['purchase', 'done']">Orden de compra #<span t-field="o.name"/></h2>
                <h2 t-if="o.state == 'cancel'">Orden de compra cancelada #<span t-field="o.name"/></h2>
            </div>
        </xpath>

        <xpath expr="//div[@id='informations']" position="replace">
            <div id="informations" class="row mt-4 mb32">
                <div t-if="o.user_id" class="col-3 bm-2">
                    <strong>Representante de compras:</strong>
                    <p t-field="o.user_id" class="m-0"/>
                </div>
                <div t-if="o.partner_ref" class="col-3 bm-2">
                    <strong>Su referencia de pedido:</strong>
                    <p t-field="o.partner_ref" class="m-0"/>
                </div>
                <div t-if="o.state in ['purchase','done'] and o.date_approve" class="col-3 bm-2">
                    <strong>Fecha de Orden:</strong>
                    <p t-field="o.date_approve" class="m-0"/>
                </div>
                <div t-elif="o.date_order" class="col-3 bm-2">
                    <strong>Fecha límite de pedido:</strong>
                    <p t-field="o.date_order" class="m-0"/>
                </div>
            </div>
        </xpath>

        <xpath expr="//table[contains(@class, 'o_main_table')]/thead" position="replace">
            <thead style="display: table-row-group">
                <tr>
                    <th name="th_description"><strong>Descripción</strong></th>
                    <th name="th_quantity" class="text-center"><strong>Cantidad</strong></th>
                    <th name="th_date_req" class="text-center"><strong>Fecha Req.</strong></th>
                    <th name="th_taxes"><strong>Impuestos</strong></th>
                    <th name="th_price_unit" class="text-end"><strong>Precio Unitario</strong></th>
                    <th name="th_amount" class="text-end"><strong>Monto</strong></th>
                </tr>
            </thead>
        </xpath>

        <xpath expr="//table[contains(@class, 'o_main_table')]/tbody" position="replace">
            <tbody>
                <t t-set="current_subtotal" t-value="0"/>
                <t t-foreach="o.order_line" t-as="line">
                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                        <t t-if="not line.display_type">
                            <td id="product">
                                <span t-field="line.name"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.product_qty"/>
                                <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.date_planned"/>
                            </td>
                            <td name="td_taxes">
                                <!-- <span t-esc="', '.join(map(lambda x: x.description or x.name, line.taxes_id))"/> -->
                                <span t-esc="line.taxes_id"/>
                            </td>
                            <td class="text-end">
                                <span t-field="line.price_unit"/>
                            </td>
                            <td class="text-end">
                                <span t-field="line.price_subtotal"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </t>
                        <t t-if="line.display_type == 'line_section'">
                            <td colspan="99" id="section">
                                <span t-field="line.name"/>
                            </td>
                            <t t-set="current_section" t-value="line"/>
                            <t t-set="current_subtotal" t-value="0"/>
                        </t>
                        <t t-if="line.display_type == 'line_note'">
                            <td colspan="99" id="note">
                                <span t-field="line.name"/>
                            </td>
                        </t>
                    </tr>
                    <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                        <tr class="is-subtotal text-end">
                            <td colspan="99" id="subtotal">
                                <strong class="mr16">Subtotal</strong>
                                <span
                                    t-esc="current_subtotal"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                />
                            </td>
                        </tr>
                    </t>
                </t>
            </tbody>
        </xpath>

        <xpath expr="//div[@id='informations']" position="after">
            <div id="information" class="row justify-content-start">
                <div class="col-6">
                    <table class="table table-sm o_main_table table-borderless mt-2">
                        <thead style="display: table-row-group">
                            <tr>
                                <th colspan="2" class="text-center">Información</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Nº de Cotizacion:</td>
                                <td><span t-field="o.name"/></td>
                            </tr>
                            <tr>
                                <td>Nº de Proveedor:</td>
                                <td><span t-field="o.partner_id.vat"/></td>
                            </tr>
                            <tr>
                                <td>Centro de Costo:</td>
                                <t t-if="o.order_line">
                                    <td>
                                        <t t-foreach="analytic_distribution_names" t-as="analytic_distribution_name">
                                            <span t-esc="analytic_distribution_name"/>, 
                                        </t>
                                    </td>
                                </t>
                            </tr>
                            <tr>
                                <td>Forma de Pago:</td>
                                <t t-if="o.order_line">
                                    <td><span t-field="o.payment_term_id"/></td>
                                </t>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-6">
                    <table class="table table-sm o_main_table table-borderless mt-2">
                        <thead style="display: table-row-group">
                            <tr>
                                <th colspan="2" class="text-center">Transporte designado:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="bg-200 fw-bold o_line_section">
                                <td>Transportista:</td>
                                <td><span t-field="o.carrier_id"/></td>
                            </tr>
                            <tr class="bg-200 fw-bold o_line_section">
                                <td>Ruc:</td>
                                <td><span t-field="o.carrier_id.vat"/></td>
                            </tr>
                            <tr class="bg-200 fw-bold o_line_section">
                                <td>Dirección:</td>
                                <td><span t-field="o.carrier_id.street"/> - <span t-field="o.carrier_id.city"/> </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </xpath>
    </template>
</odoo>