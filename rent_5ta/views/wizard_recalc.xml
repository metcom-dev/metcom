<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="recalc_rent_5ta_wizard" model="ir.ui.view">
        <field name="name">recalc.rent.wizard</field>
        <field name="model">payroll.projection.wizard.recalc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date_from"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                    </group>
                    <div>
                        <span class="text-muted">Warning: The work entry regeneration will delete all manual changes on the selected period.</span>
                    </div>
                </sheet>
                <footer>
                    <button name="recalc_rent_5ta" string="Recalcular" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
