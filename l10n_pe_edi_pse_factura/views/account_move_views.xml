<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" position="inside">
                    <button class="text-danger" icon="fa-check" attrs="{'invisible':['|', '|', '|', ('edi_state','!=','cancelled'),('l10n_pe_edi_pse_void_status','in',('ask_for_status','accepted','objected')),('l10n_pe_edi_pse_cancel_uid','=',False),('state', '!=', 'cancel')]}">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Void Rejected by</span>
                            <span class="o_stat_text">SUNAT</span>
                        </div>
                    </button>
                    <button class="text-success" icon="fa-check" attrs="{'invisible':['|', '|', '|', ('edi_state','!=','cancelled'),('l10n_pe_edi_pse_void_status','in',('ask_for_status','rejected')),('l10n_pe_edi_pse_cancel_uid','=',False),('state', '!=', 'cancel')]}">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Void Accepted by</span>
                            <span class="o_stat_text">SUNAT</span>
                        </div>
                    </button>
                    <button class="text-warning" icon="fa-refresh" attrs="{'invisible':['|', '|', '|', ('edi_state','!=','cancelled'),('l10n_pe_edi_pse_void_status','in',('rejected','accepted','objected')),('l10n_pe_edi_pse_cancel_uid','=',False),('state', '=', 'draft')]}" name="action_retry_edi_documents_error" type="object">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Get Void Status in</span>
                            <span class="o_stat_text">SUNAT</span>
                        </div>
                    </button>
                    <button class="text-warning" icon="fa-refresh" attrs="{'invisible':['|', '|', '|', ('edi_state','!=','sent'),('l10n_pe_edi_pse_status','in',('rejected','accepted','objected')),('l10n_pe_edi_pse_uid','=',False),('state', '=', 'draft')]}" name="action_retry_edi_documents_error" type="object">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Get Status in</span>
                            <span class="o_stat_text">SUNAT</span>
                        </div>
                    </button>
                    <button class="text-danger" icon="fa-check" attrs="{'invisible':['|', '|', '|', ('edi_state','!=','sent'),('l10n_pe_edi_pse_status','in',('ask_for_status','accepted','objected')),('l10n_pe_edi_pse_uid','=',False),('state', '=', 'draft')]}">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Rejected by</span>
                            <span class="o_stat_text">SUNAT</span>
                        </div>
                    </button>
                    <button class="text-success" icon="fa-check" attrs="{'invisible':['|', '|', '|', ('edi_state','!=','sent'),('l10n_pe_edi_pse_status','in',('ask_for_status','rejected')),('l10n_pe_edi_pse_uid','=',False),('state', '=', 'draft')]}">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Accepted by</span>
                            <span class="o_stat_text">SUNAT</span>
                        </div>
                    </button>
                </div>
                <xpath expr="//field[@name='l10n_pe_edi_cancel_reason']" position="after">
                    <field name="l10n_pe_edi_pse_uid" readonly="1"/>
                    <field name="l10n_pe_edi_pse_status" readonly="1"/>
                    <field name="l10n_pe_edi_pse_void_status" readonly="1"/>
                    <field name="l10n_pe_edi_pse_cancel_uid" readonly="1"/>
                    <field name="l10n_pe_edi_accepted_by_sunat" invisible="1"/>
                    <field name="l10n_pe_edi_void_accepted_by_sunat" invisible="1"/>
                    <field name="l10n_pe_edi_xml_file_link" widget="url"/>
                    <field name="l10n_pe_edi_pdf_file_link" widget="url"/>
                    <field name="l10n_pe_edi_cdr_file_link" widget="url"/>
                    <field name="l10n_pe_edi_cdr_void_file_link" widget="url"/>
                </xpath>
                <xpath expr="//field[@name='l10n_pe_edi_charge_reason']" position="after">
                    <field name="l10n_pe_edi_rectification_ref_type" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('move_type', '!=', 'out_refund')]}"/>
                    <field name="l10n_pe_edi_rectification_ref_number" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('move_type', '!=', 'out_refund')]}"/>
                    <field name="l10n_pe_edi_rectification_ref_date" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('move_type', '!=', 'out_refund')]}"/>
                </xpath>

                <field name="l10n_pe_edi_refund_reason" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')], 'invisible': [('move_type', '!=', 'out_refund')]}</attribute>
                </field>

                <xpath expr="//page[@name='l10n_pe_edi']" position="inside">
                    <group string="Credit Installments" name="payment_fee_group">
                        <field name="l10n_pe_edi_payment_fee_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree editable="bottom">
                                <field name="amount_total" sum="Total"/>
                                <field name="date_due"/>
                                <field name="currency_id"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Transport Documents" name="transport_group">
                        <field name="l10n_pe_edi_transportref_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree editable="bottom">
                                <field name="ref_type"/>
                                <field name="ref_number"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>